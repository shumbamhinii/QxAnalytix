{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  // Tell Vercel this is a Node.js project by pointing to package.json
      "use": "@vercel/node",  // Use the Node.js builder
      "config": {
        "outputDirectory": "dist" // Specify the directory where Vite outputs your build
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm run build" // Explicitly tell Vercel to run this command
}
